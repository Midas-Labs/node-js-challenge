<%- include('partials/navbar') %>

<!-- Profile Header -->
<div class="profile-header">
  <h1><%= user.name %>'s Profile</h1>
  <p>Here are your uploaded images</p>
</div>

<!-- Gallery Section -->
<div class="gallery">
  <% images.forEach(function(image) { %>
    <div class="gallery-item-container">
      <!-- Make the image clickable -->
      <a href="/images/<%= image.shortUrl %>/details">
        <img class="gallery-item" src="<%= image.url %>" alt="Image" />
      </a>
      <div class="image-info">
        <p><strong>Title:</strong> <%= image.title || 'No title provided' %></p>
        <p><strong>Description:</strong> <%= image.description || 'No description provided' %></p>
      </div>
      <div class="image-actions">
        <form action="/images/<%= image.shortUrl %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
        <form action="/images/<%= image.shortUrl %>/update" method="GET" style="display:inline;">
          <button type="submit">Update Metadata</button>
        </form>
      </div>
    </div>
  <% }) %>
</div>

<!-- Back to Home -->
<a href="/" class="back-link">Back to Home</a>
